                                    <td class="fw-bold">Marque :</td>
                                    <td><span class="badge bg-info">@produitSelectionne.Marque</span></td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Type :</td>
                                    <td><span class="badge bg-secondary">@produitSelectionne.Type</span></td>
                                </tr>
